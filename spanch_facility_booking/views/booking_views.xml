<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Booking List View -->
    <record id="view_booking_list" model="ir.ui.view">
        <field name="name">facility.booking.list</field>
        <field name="model">facility.booking</field>
        <field name="arch" type="xml">
            <list string="Bookings">
                <field name="name"/>
                <field name="facility_id"/>
                <field name="user_id"/>
                <field name="start_datetime"/>
                <field name="end_datetime"/>
                <field name="state"/>
                <field name="purpose"/>
            </list>
        </field>
    </record>

    <!-- Booking Form View - SIMPLE WITHOUT ATTRS -->
    <record id="view_booking_form" model="ir.ui.view">
        <field name="name">facility.booking.form</field>
        <field name="model">facility.booking</field>
        <field name="arch" type="xml">
            <form string="Booking">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="facility_id"/>
                            <field name="user_id"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="start_datetime"/>
                            <field name="end_datetime"/>
                            <field name="attendees"/>
                        </group>
                    </group>
                    <group>
                        <field name="purpose"/>
                        <field name="description" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Booking Search View -->
    <record id="view_booking_search" model="ir.ui.view">
        <field name="name">facility.booking.search</field>
        <field name="model">facility.booking</field>
        <field name="arch" type="xml">
            <search string="Search Bookings">
                <field name="name"/>
                <field name="facility_id"/>
                <field name="user_id"/>
                <filter string="My Bookings" name="my_bookings" 
                        domain="[('user_id','=',uid)]"/>
            </search>
        </field>
    </record>

    <!-- Action for Bookings -->
    <record id="action_booking" model="ir.actions.act_window">
        <field name="name">Bookings</field>
        <field name="res_model">facility.booking</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>