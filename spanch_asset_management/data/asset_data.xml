<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default Asset Categories -->
        <record id="asset_category_computers" model="asset.category">
            <field name="name">Computers &amp; IT Equipment</field>
            <field name="code">IT</field>
        </record>

        <record id="asset_category_office_furniture" model="asset.category">
            <field name="name">Office Furniture</field>
            <field name="code">FURN</field>
        </record>

        <!-- Default Asset Locations -->
        <record id="asset_location_head_office" model="asset.location">
            <field name="name">Head Office</field>
            <field name="code">HO</field>
        </record>

        <!-- Sample Assets for Demonstration -->
        <record id="asset_sample_server" model="asset.management">
            <field name="name">Dell PowerEdge Server</field>
            <field name="code">AST001</field>
            <field name="asset_category_id" ref="asset_category_computers"/>
            <field name="purchase_date">2024-01-15</field>
            <field name="purchase_cost">12500.00</field>
            <field name="state">active</field>
        </record>

        <record id="asset_sample_laptop" model="asset.management">
            <field name="name">Lenovo ThinkPad Laptop</field>
            <field name="code">AST002</field>
            <field name="asset_category_id" ref="asset_category_computers"/>
            <field name="purchase_date">2024-02-01</field>
            <field name="purchase_cost">1899.00</field>
            <field name="state">active</field>
        </record>

        <!-- Sample Maintenance Records -->
        <record id="maintenance_sample_preventive" model="asset.maintenance">
            <field name="name">MTN001</field>
            <field name="asset_id" ref="asset_sample_server"/>
            <field name="maintenance_type">preventive</field>
            <field name="scheduled_date">2024-06-15</field>
            <field name="description">Quarterly preventive maintenance</field>
            <field name="state">scheduled</field>
        </record>
    </data>
</odoo>
