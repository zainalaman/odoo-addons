<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Maintenance List View -->
    <record id="view_maintenance_list" model="ir.ui.view">
        <field name="name">asset.maintenance.list</field>
        <field name="model">asset.maintenance</field>
        <field name="arch" type="xml">
            <list string="Maintenance">
                <field name="name"/>
                <field name="asset_id"/>
                <field name="maintenance_type"/>
                <field name="scheduled_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Maintenance Form View -->
    <record id="view_maintenance_form" model="ir.ui.view">
        <field name="name">asset.maintenance.form</field>
        <field name="model">asset.maintenance</field>
        <field name="arch" type="xml">
            <form string="Maintenance">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="asset_id"/>
                            <field name="maintenance_type"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="scheduled_date"/>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Maintenance Search View -->
    <record id="view_maintenance_search" model="ir.ui.view">
        <field name="name">asset.maintenance.search</field>
        <field name="model">asset.maintenance</field>
        <field name="arch" type="xml">
            <search string="Search Maintenance">
                <field name="name"/>
                <field name="asset_id"/>
                <filter string="Scheduled Maintenance" name="scheduled_maintenance" 
                        domain="[('state','=','scheduled')]"/>
                <filter string="In Progress" name="in_progress" 
                        domain="[('state','=','in_progress')]"/>
            </search>
        </field>
    </record>

    <!-- Action for Maintenance -->
    <record id="action_asset_maintenance" model="ir.actions.act_window">
        <field name="name">Maintenance</field>
        <field name="res_model">asset.maintenance</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>